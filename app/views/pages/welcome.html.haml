- title 'Welcome', false

#landing-page
  .col-md-12
    .row
      .col-md-4.col-md-offset-4
        = image_tag 'landing-page-logo.png', class: 'img-responsive landing-logo'

    .row
      .col-md-12.orange-bar
        .orange-bar-text
          %h2
            = "WELCOME TO THE BIOZYME#{content_tag(:sup, "&#174;".html_safe)} ONLINE RESEARCH CENTER".html_safe
          %p
            The hub for the study and application of BioZymeâ€™s precision biotics and their impact on naturally improving animal performance.

    .row.hub-icons-wrapper.text-center
      .col-md-8.col-md-offset-2.col-sm-12.col-sm-offset-0
        - flash.each do |name, msg|
          .row
            .col-md-12
              = render_flash name, msg
        .row
          #flash.col-md-12
        .row
          - if current_user.guest?
            .col-lg-2.col-lg-offset-4.col-md-4.col-md-offset-2.col-sm-4.col-sm-offset-2.col-xs-6.text-center
              = link_to search_papers_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/search-icon.png', class: 'img-responsive'
                .hub-icon-title Search

            .col-lg-2.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to papers_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/literature-icon.png', class: 'img-responsive'
                .hub-icon-title Literature

          - else
            .col-lg-2.col-lg-offset-1.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to search_papers_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/search-icon.png', class: 'img-responsive'
                .hub-icon-title Search

            .col-lg-2.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to papers_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/literature-icon.png', class: 'img-responsive'
                .hub-icon-title Literature

            .col-lg-2.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to latest_research_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/latest-research-icon.png', class: 'img-responsive'
                .hub-icon-title Latest Research

            .visible-md.visible-sm.col-md-2.col-sm-2

            .col-lg-2.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to learn_more_path, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/learn-more-icon.png', class: 'img-responsive'
                .hub-icon-title Learn More

            .visible-xs.col-xs-3

            .col-lg-2.col-md-4.col-sm-4.col-xs-6.text-center
              = link_to new_feedback_path, remote: true, class: 'hub-link' do
                .hub-icon
                  = image_tag 'welcome/connect-icon.png', class: 'img-responsive'
                .hub-icon-title Connect
