#impersonation-modal.modal.fade{role: 'dialog', aria: {labelledby: 'impersonation-modal-label', hidden: true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}, aria: {hidden: true}} &times;
        %h3.modal-title#impersonation-modal-label Role Impersonation

      .modal-body
        .row
          .col-md-12
            .btn-group-vertical
              - current_user.impersonatable_roles.each do |role|
                = button_to role.to_s.titleize, role_impersonation_path, method: :post, params: { role: role.to_s }, class: 'btn btn-primary'

      .modal-footer
        %button.btn.btn-default{data: {dismiss: 'modal'}, aria: {hidden: true}} Cancel
