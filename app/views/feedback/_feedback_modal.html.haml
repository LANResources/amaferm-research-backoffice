.modal.fade{id: "new-feedback-modal", role: 'dialog', aria: {labelledby: "new-feedback-modal-label", hidden: 'true'}}
  .modal-dialog
    .modal-content
      = form_for Feedback.new, url: feedback_path, remote: true, html: { class: 'form-horizontal' } do |f|
        .modal-header
          %button.close{type: 'button', data: {dismiss: 'modal'}, aria: {hidden: 'true'}} &times;
          %h4.modal-title{id: "new-feedback-modal-label"} Contact Us

        .modal-body
          .form-group
            = f.label :phone, class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_field :phone, class: 'form-control'

          .form-group
            = f.label :city_state, 'City/State', class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_field :city_state, class: 'form-control'

          .form-group
            = f.label :comments, class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_area :comments, class: 'form-control'

        .modal-footer
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
          = f.submit class: 'btn btn-primary'
