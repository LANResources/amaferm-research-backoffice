- title 'Users'

.row
  .col-md-12
    %table.table.table-striped.table-condensed
      %thead
        %tr
          %th= sortable 'last_name', 'Name'
          %th.c= sortable 'email'
          %th.c= sortable 'role'
          - if policy(current_user).edit?
            %th.r
      %tbody
        = render partial: 'users/user', collection: @users

    = will_paginate @users

- if policy(User).create?
  .row
    .col-md-12
      = link_to "Add User", new_user_path, class: 'btn btn-primary'

